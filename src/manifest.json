{
    "name": "Great Extension",
    "version": "1.0",
    "description": "Build an Extension with Angular",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "webNavigation",
        "scripting",
        "storage"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
        "default_popup": "/index.html#/popup"
    },
    "options_page": "/index.html#/options",
    "host_permissions": ["https://www.googleapis.com/*"]
    
  }